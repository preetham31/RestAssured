<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" parallel="methods"
       thread-count="4">

    <listeners>
        <listener
                class-name="com.api.listeners.TestListener"/>
    </listeners>

    <test name="API-Tests">

        <classes>
            <class name="com.api.tests.AccountCreationTest"/>
            <class name="com.api.tests.ForgetPasswordTest"/>
            <class name="com.api.tests.GetProfileRequestTest"/>
            <class name="com.api.tests.LoginApiTest"/>
        </classes>
    </test>
</suite>
